
import cv2 
import numpy as np
import functionsForDetector as f
import constantsForDetector as constants
vid = cv2.VideoCapture(0)
while(vid.isOpened()):    
    ret, frame = vid.read()  
    'CUBE'
    mask1=f.maskGenerator(frame,constants.lower_purple,constants.higher_purple)
    contours1=f.convexHull(frame)    
    contours1=f.filter_out_contours_that_doesnot_look_like_square(contours1)
    if len(contours1) >0:
        biggest_contour1=f.find_biggest_contour(contours1)
        center1=f.find_and_draw_center_of_target(frame,biggest_contour1)
        mask1=f.maskGenerator(frame,constants.lower_purple,constants.higher_purple)
    'CONE'
    contours2=f.convexHull(frame)    
    contours2=f.filter_out_contours_that_doesnot_look_like_square(contours2)
    if len(contours2) >0:
        biggest_contour2=f.find_biggest_contour(contours2)
        center2=f.find_and_draw_center_of_target(frame,biggest_contour2)
    

    "Common stuff"
    cv2.imshow('Camera view',frame)
    # the 'q' button is set for break
    if cv2.waitKey(55) & 0xFF == ord('q'):
        break
       
vid.release()
# Destroy all the windows
cv2.destroyAllWindows()



